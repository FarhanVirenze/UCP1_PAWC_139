<style>
  /* General Styling */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Poppins', sans-serif;
    background: linear-gradient(135deg, #2c3e50, #4ca1af);
    color: #f9f9f9;
    overflow-x: hidden;
}

/* Animations */
@keyframes frameIn {
    0% {
        transform: translateY(100px);
        opacity: 0;
    }
    100% {
        transform: translateY(0);
        opacity: 1;
    }
}

/* Home Container */
.home-container {
    text-align: center;
    padding: 40px;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 2rem;
    animation: frameIn 1s ease-out;
    margin-top: 4rem;
}

.home-container h1 {
    font-size: 4.5rem;
    font-weight: 800;
    text-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
    background: linear-gradient(90deg, #f8d210, #ff6700);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}

.home-container p {
    font-size: 1.4rem;
    line-height: 1.8;
    max-width: 800px;
    opacity: 0.9;
}

/* Button Styling */
.btn-primary {
    font-size: 1.2rem;
    padding: 0.8rem 2.5rem;
    border: none;
    border-radius: 50px;
    background: linear-gradient(90deg, #ff6700, #f8d210);
    color: #fff;
    text-transform: uppercase;
    box-shadow: 0 6px 15px rgba(255, 103, 0, 0.4);
    cursor: pointer;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.btn-primary:hover {
    box-shadow: 0 8px 20px rgba(255, 103, 0, 0.6);
    transform: translateY(-3px);
}

/* Carousel Styling */
.carousel-inner img {
    width: 100%;
    height: 500px; /* Menentukan tinggi gambar agar seragam */
    object-fit: cover; /* Memastikan gambar tetap proporsional */
    border-radius: 10px; /* Membuat sudut gambar melengkung */
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3); /* Menambahkan bayangan */
    transition: transform 0.6s ease, opacity 0.6s ease; /* Efek transisi smooth */
}

.carousel-caption {
    background: rgba(0, 0, 0, 0.6);
    padding: 1rem 2rem;
    border-radius: 15px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.4);
}

/* Menambahkan transisi pada carousel-item */
.carousel-item {
    transition: transform 0.6s ease, opacity 0.6s ease; /* Smooth transition saat berganti gambar */
}


/* Features Section */
.features {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 2rem;
    margin-top: 4rem;
}

.feature-item {
    background: rgba(255, 255, 255, 0.1);
    padding: 2rem;
    border-radius: 15px;
    text-align: center;
    max-width: 300px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
}

.feature-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.4);
}

.feature-item i {
    font-size: 4rem;
    color: #f8d210;
    margin-bottom: 1rem;
}

.feature-item h3 {
    margin-bottom: 1rem;
    font-size: 1.5rem;
    font-weight: bold;
}

.feature-item p {
    font-size: 1rem;
    line-height: 1.6;
    color: #e0e0e0;
}

</style>

